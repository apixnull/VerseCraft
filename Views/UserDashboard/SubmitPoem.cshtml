@model VerseCraft.ViewModels.PoemSubmissionViewModel

@{
    ViewData["Title"] = "Submit a Poem";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SubmitPoem" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Poem Title</label>
        <input type="text" id="Title" name="Title" class="form-control" required maxlength="200" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Content">Poem Content</label>
        <textarea id="Content" name="Content" class="form-control" rows="6" required>@Model.Content</textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Summary">Summary</label>
        <textarea id="Summary" name="Summary" class="form-control" rows="3">@Model.Summary</textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Genre">Genre</label>
        <input type="text" id="Genre" name="Genre" class="form-control" maxlength="100" value="@Model.Genre" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Style">Style</label>
        <input type="text" id="Style" name="Style" class="form-control" maxlength="100" value="@Model.Style" />
        <span asp-validation-for="Style" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Language">Language</label>
        <input type="text" id="Language" name="Language" class="form-control" maxlength="100" value="@Model.Language" />
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Mood">Mood</label>
        <input type="text" id="Mood" name="Mood" class="form-control" maxlength="100" value="@Model.Mood" />
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CoverImage">Cover Image (Optional)</label>
        <input type="file" id="CoverImage" name="CoverImage" class="form-control" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" id="IsPublic" name="IsPublic" class="form-check-input" checked="@Model.IsPublic" />
        <label class="form-check-label" for="IsPublic">Make Poem Public</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit Poem</button>
</form>

<hr />

<div>
    <a href="@Url.Action("MainDashboard", "UserDashboard")" class="btn btn-secondary">Back to Dashboard</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
