@model VerseCraft.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    ViewData["Header"] = "Reset your password";
    Layout = "_AuthLayout";
}

@if (Model.Sent)
{
    <!-- Confirmation message after form submission -->
    <div class="text-center p-3">
        <h4>Password Reset Email Sent</h4>
        <p>A reset link has been sent to <strong>@Model.Email</strong>. Please check your inbox.</p>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-accent mt-3">Back to Login</a>
    </div>
}
else
{
    <!-- The original Forgot Password form -->
    <h2 class="text-center mb-3 text-secondary">Forgot Password</h2>

    <form asp-action="ForgotPassword" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Email" class="form-label text-muted"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-accent w-100">Send Reset Link</button>
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Auth" asp-action="Login" class="text-muted small">Back to Login</a>
    </div>
}
