@model VerseCraft.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    ViewData["Header"] = "Reset your password";
    Layout = "_AuthLayout";
}

@if (Model.Sent)
{
    <!-- Confirmation message after form submission -->
    <div class="text-center p-3">
        <h4 class="mb-3 text-success">
            <i class="bi bi-check-circle-fill me-2"></i>Password Reset Email Sent
        </h4>
        <p>
            A reset link has been sent to <strong>@Model.Email</strong>.<br />
            Please check your inbox.
        </p>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-accent mt-3">
            <i class="bi bi-box-arrow-in-left me-1"></i>Back to Login
        </a>
    </div>
}
else
{
    <!-- The original Forgot Password form -->
    <h2 class="text-center mb-3 text-secondary fw-bold">Forgot Password</h2>

    <form asp-action="ForgotPassword" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Email" class="form-label text-muted">
                <i class="bi bi-envelope-fill me-1" style="color:#FF6F91;"></i> Email
            </label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-accent w-100 mb-2">
            <i class="bi bi-send-fill me-1"></i>Send Reset Link
        </button>
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Auth" asp-action="Login" class="text-muted small">
            <i class="bi bi-arrow-left me-1"></i>Back to Login
        </a>
    </div>
}