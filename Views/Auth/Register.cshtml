@model VerseCraft.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["Header"] = "Craft and share your poetry with the world";
    Layout = "_AuthLayout";
}

<h2 class="text-center mb-3 text-secondary fw-bold">Sign Up</h2>

<form asp-action="Register" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label text-muted">
            <i class="bi bi-person-fill me-1" style="color:#FF6F91;"></i> Name
        </label>
        <input asp-for="Name" class="form-control" placeholder="Enter your name" autocomplete="name" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label text-muted">
            <i class="bi bi-envelope-fill me-1" style="color:#FF6F91;"></i> Email
        </label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" autocomplete="username" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label text-muted">
            <i class="bi bi-lock-fill me-1" style="color:#FF6F91;"></i> Password
        </label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label text-muted">
            <i class="bi bi-lock-fill me-1" style="color:#FF6F91;"></i> Confirm Password
        </label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" autocomplete="new-password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="termsCheck" required />
        <label class="form-check-label small" for="termsCheck">
            I agree to the <a href="/terms" target="_blank">Terms &amp; Conditions</a>
        </label>
    </div>
    <button type="submit" class="btn btn-accent w-100 mb-2">
        <i class="bi bi-person-plus-fill me-1"></i> Register
    </button>
</form>

<div class="text-center mb-3">
    <small class="text-muted">— or —</small>
</div>

<div class="d-grid mb-3">
    <a asp-controller="Auth" asp-action="GoogleLogin" class="btn google-btn d-flex align-items-center justify-content-center">
        <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
             style="height:1.2em; margin-right:.5em;" alt="Google logo" />
        Sign up with Google
    </a>
</div>

<div class="text-center">
    <small class="text-secondary">
        Already have an account?
        <a asp-controller="Auth" asp-action="Login">Sign in</a>
    </small>
</div>