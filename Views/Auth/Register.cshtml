@model VerseCraft.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["Header"] = "Craft and share your poetry with the world";
    Layout = "_AuthLayout";
}

<h2 class="text-center mb-3 text-secondary">Sign Up</h2>

<form asp-action="Register" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label text-muted"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label text-muted"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label text-muted"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label text-muted"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="termsCheck" required />
        <label class="form-check-label small" for="termsCheck">
            I agree to the <a href="/terms" target="_blank">Terms &amp; Conditions</a>
        </label>
    </div>
    <button type="submit" class="btn btn-accent w-100 mb-2">Register</button>
</form>

<div class="text-center mb-3">
    <small class="text-muted">— or —</small>
</div>

<div class="d-grid mb-3">
    <a asp-controller="Auth" asp-action="GoogleLogin" class="btn btn-block google-btn">
        <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
             style="height:1em; margin-right:.5em;" alt="Google logo" />
        Sign up with Google
    </a>
</div>

<div class="text-center">
    <small class="text-secondary">
        Already have an account?
        <a asp-controller="Auth" asp-action="Login">Sign in</a>
    </small>
</div>
