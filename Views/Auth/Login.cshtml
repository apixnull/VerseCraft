@model VerseCraft.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["Header"] = "Welcome back—Log in to continue";
    Layout = "_AuthLayout";
}

<h2 class="text-center mb-3 text-secondary fw-bold">Sign In</h2>

<form asp-action="Login" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Email" class="form-label text-muted">
            <i class="bi bi-envelope-fill me-1" style="color:#FF6F91;"></i> Email
        </label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label text-muted">
            <i class="bi bi-lock-fill me-1" style="color:#FF6F91;"></i> Password
        </label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Auth" asp-action="ForgotPassword" class="text-decoration-none small text-muted">
            Forgot password?
        </a>
    </div>
    <button type="submit" class="btn btn-accent w-100 mb-2">
        <i class="bi bi-box-arrow-in-right me-1"></i> Login
    </button>
</form>

<div class="text-center mb-3">
    <small class="text-muted">— or —</small>
</div>

<div class="d-grid mb-3">
    <a asp-controller="Auth" asp-action="GoogleLogin" class="btn google-btn d-flex align-items-center justify-content-center">
        <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
             style="height:1.2em; margin-right:.5em;" alt="Google logo" />
        Sign in with Google
    </a>
</div>

<div class="text-center">
    <small class="text-secondary">
        New to VerseCraft?
        <a asp-controller="Auth" asp-action="Register">Create an account</a>
    </small>
</div>