@{
    ViewData["Title"] = "User Dashboard";
}

<link rel="stylesheet" href="~/css/mainDashboard.css" asp-append-version="true" />


<div class="anthology-header">
    <h1 class="anthology-title">Your Poetry Collections</h1>
    <p class="anthology-subtitle">Curate your personal anthology of beloved poems, organize them by themes, and revisit your favorites anytime.</p>
</div>

<div class="anthology-container">
    <div class="tabs-container">
        <ul class="nav nav-tabs" id="anthologyTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="my-collections-tab" data-bs-toggle="tab" data-bs-target="#my-collections" type="button" role="tab" aria-controls="my-collections" aria-selected="true">
                    <i class="bi bi-collection"></i> My Collections
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="saved-poems-tab" data-bs-toggle="tab" data-bs-target="#saved-poems" type="button" role="tab" aria-controls="saved-poems" aria-selected="false">
                    <i class="bi bi-bookmark-heart"></i> Saved Poems
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="discover-tab" data-bs-toggle="tab" data-bs-target="#discover" type="button" role="tab" aria-controls="discover" aria-selected="false">
                    <i class="bi bi-globe"></i> Discover Public Collections
                </button>
            </li>
        </ul>
    </div>

    <div class="tab-content" id="anthologyTabContent">
        <!-- My Collections Tab -->
        <div class="tab-pane fade show active" id="my-collections" role="tabpanel" aria-labelledby="my-collections-tab">
            <!-- If user has collections, display them -->
            <div class="row">
                <!-- Sample Collection 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="collection-card">
                        <div class="collection-cover" style="background-image: url('/images/nature-anthology.jpg')">
                            <div class="collection-overlay">
                                <h3 class="collection-title">Nature's Whispers</h3>
                            </div>
                        </div>
                        <div class="collection-details">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="bi bi-bookmark-fill text-primary"></i> 12 poems</span>
                                <span class="public-badge"><i class="bi bi-eye"></i> Public</span>
                            </div>
                            <p class="collection-desc">A collection of poems that celebrate the beauty and wisdom of the natural world.</p>
                            <div class="collection-meta">
                                <span><i class="bi bi-calendar3"></i> Updated 3 days ago</span>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sample Collection 2 -->
                <div class="col-md-6 col-lg-4">
                    <div class="collection-card">
                        <div class="collection-cover" style="background-image: url('/images/love-anthology.jpg')">
                            <div class="collection-overlay">
                                <h3 class="collection-title">Love & Loss</h3>
                            </div>
                        </div>
                        <div class="collection-details">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="bi bi-bookmark-fill text-primary"></i> 8 poems</span>
                                <span class="private-badge"><i class="bi bi-lock"></i> Private</span>
                            </div>
                            <p class="collection-desc">Emotional verses that explore the depths of human connection and heartbreak.</p>
                            <div class="collection-meta">
                                <span><i class="bi bi-calendar3"></i> Updated 1 week ago</span>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sample Collection 3 -->
                <div class="col-md-6 col-lg-4">
                    <div class="collection-card">
                        <div class="collection-cover" style="background-image: url('/images/urban-anthology.jpg')">
                            <div class="collection-overlay">
                                <h3 class="collection-title">Urban Rhythms</h3>
                            </div>
                        </div>
                        <div class="collection-details">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span><i class="bi bi-bookmark-fill text-primary"></i> 5 poems</span>
                                <span class="public-badge"><i class="bi bi-eye"></i> Public</span>
                            </div>
                            <p class="collection-desc">Modern poetry capturing the essence of city life and urban experiences.</p>
                            <div class="collection-meta">
                                <span><i class="bi bi-calendar3"></i> Updated 2 weeks ago</span>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- "Create New Collection" Card -->
                <div class="col-md-6 col-lg-4">
                    <div class="collection-card h-100 d-flex align-items-center justify-content-center" style="background-color: #f8f9fa; min-height: 300px;">
                        <div class="text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-plus-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                            </div>
                            <h4>Create New Collection</h4>
                            <p class="text-muted">Start a new themed anthology of poems</p>
                            <button class="btn btn-primary mt-2">
                                <i class="bi bi-plus"></i> New Collection
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Saved Poems Tab -->
        <div class="tab-pane fade" id="saved-poems" role="tabpanel" aria-labelledby="saved-poems-tab">
            <!-- Sample saved poems similar to the Feed layout but with options to add to collections -->
            <div class="poem-card">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="poem-title">Moonlit Reminiscence</h2>
                        <div class="poem-author">By Sophia Williams</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="addToCollectionDropdown1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-folder-plus"></i> Add to Collection
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="addToCollectionDropdown1">
                            <li><a class="dropdown-item" href="#">Nature's Whispers</a></li>
                            <li><a class="dropdown-item" href="#">Love & Loss</a></li>
                            <li><a class="dropdown-item" href="#">Urban Rhythms</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-plus-circle"></i> Create New Collection</a></li>
                        </ul>
                    </div>
                </div>
                <div class="poem-content">
                    In the quiet hours when the world sleeps,
                    I find myself wandering through memories,
                    Like rooms in an old, familiar house.
                    Each doorway leads to moments long past,
                    Yet still vivid in the theater of my mind.

                    The moon casts silver light through my window,
                    Illuminating fragments of what once was.
                    I trace the outline of your smile in the darkness,
                    A cartography of love and loss,
                    Mapped across the terrain of years.

                    Time may distance us from what we've lived,
                    But cannot erase the imprint left behind.
                    In this moonlit hour of reminiscence,
                    I honor what shaped me,
                    And release what no longer serves.
                </div>
                <div class="tags mb-3 mt-3">
                    <span class="tag-pill">Memory</span>
                    <span class="tag-pill">Free Verse</span>
                    <span class="tag-pill">Night</span>
                </div>
                <div class="poem-meta">
                    <span><i class="bi bi-calendar3"></i> Saved 3 days ago</span>
                    <div class="poem-actions">
                        <button class="btn btn-sm btn-outline-primary"><i class="bi bi-heart-fill"></i> 36</button>
                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-bookmark-x"></i> Remove</button>
                        <a href="#" class="btn btn-sm btn-outline-dark"><i class="bi bi-box-arrow-up-right"></i> View Original</a>
                    </div>
                </div>
            </div>

            <div class="poem-card">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="poem-title">Whispers of Autumn</h2>
                        <div class="poem-author">By Emily Chen</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="addToCollectionDropdown2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-folder-plus"></i> Add to Collection
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="addToCollectionDropdown2">
                            <li><a class="dropdown-item" href="#">Nature's Whispers</a></li>
                            <li><a class="dropdown-item" href="#">Love & Loss</a></li>
                            <li><a class="dropdown-item" href="#">Urban Rhythms</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-plus-circle"></i> Create New Collection</a></li>
                        </ul>
                    </div>
                </div>
                <div class="poem-content">
                    Crimson leaves drift down,
                    Whispering secrets of change.
                    Time's gentle passage.

                    The earth breathes deeply,
                    Preparing for winter's sleep,
                    As light softly fades.

                    In this transition,
                    I find myself transforming,
                    Just like the seasons.
                </div>
                <div class="tags mb-3 mt-3">
                    <span class="tag-pill">Nature</span>
                    <span class="tag-pill">Haiku</span>
                    <span class="tag-pill">Autumn</span>
                </div>
                <div class="poem-meta">
                    <span><i class="bi bi-calendar3"></i> Saved 1 week ago</span>
                    <div class="poem-actions">
                        <button class="btn btn-sm btn-outline-primary"><i class="bi bi-heart-fill"></i> 24</button>
                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-bookmark-x"></i> Remove</button>
                        <a href="#" class="btn btn-sm btn-outline-dark"><i class="bi bi-box-arrow-up-right"></i> View Original</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Discover Public Collections Tab -->
        <div class="tab-pane fade" id="discover" role="tabpanel" aria-labelledby="discover-tab">
            <div class="row mb-4">
                <div class="col-12">
