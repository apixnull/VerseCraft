@model VerseCraft.ViewModels.ContactFormViewModel
@{
    ViewData["Title"] = "About Us";
}

<link rel="stylesheet" href="~/css/aboutUs.css" asp-append-version="true" />

<div class="about-header">
    <div class="container">
        <h1>About <span class="text-primary">VerseCraft</span></h1>
        <p>Empowering poets and readers to connect through the transformative power of words since 2025</p>
    </div>
</div>

<section class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2>Our Mission</h2>
                <p>
                    VerseCraft was founded with a simple yet powerful mission: to create a vibrant community where poetry thrives in the digital age. We believe that poetry has the unique ability to connect souls, transcend boundaries, and express the full spectrum of human experience.
                </p>
                <p>
                    We're dedicated to providing a platform that elevates poetic voices from all backgrounds, celebrates diverse perspectives, and fosters meaningful connections between writers and readers. In a world of noise and haste, VerseCraft offers a sanctuary for thoughtful expression and contemplation.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <img src="~/images/mission-image.jpg" alt="Our Mission" class="about-img shadow" />
            </div>
        </div>
    </div>
</section>

<section class="about-section">
    <div class="container">
        <h2 class="mb-5">Our Core Values</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="values-item">
                    <div class="values-icon">
                        <i class="bi bi-megaphone"></i>
                    </div>
                    <div class="values-content">
                        <h4>Amplifying Voices</h4>
                        <p>We believe every poet deserves to be heard, regardless of background or experience level. Our platform gives equal opportunity to established and emerging voices alike.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="values-item">
                    <div class="values-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="values-content">
                        <h4>Building Community</h4>
                        <p>Poetry flourishes in community. We foster connections between writers and readers through shared appreciation, constructive feedback, and collaborative growth.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="values-item">
                    <div class="values-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <div class="values-content">
                        <h4>Respecting Creators</h4>
                        <p>We uphold the rights of poets over their work. On VerseCraft, you maintain ownership of your creations while sharing them with an appreciative audience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="values-item">
                    <div class="values-icon">
                        <i class="bi bi-flower1"></i>
                    </div>
                    <div class="values-content">
                        <h4>Nurturing Growth</h4>
                        <p>We view poetry as a journey, not a destination. Our platform provides tools and community support to help poets develop their craft and discover their unique voice.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-section">
    <div class="container">
        <h2 class="mb-5">Meet Our Team</h2>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="team-member">
                    <img src="~/images/josua.jpg" alt="Team Member">
                    <h5>Mark Joshua Alducente</h5>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="team-member">
                    <img src="~/images/romeo.jpg" alt="Team Member">
                    <h5>Romeo Baynosa Jr.</h5>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="team-member">
                    <img src="~/images/jana.jfif" alt="Team Member">
                    <h5>Jhana Marie Catabas</h5>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <div class="team-member">
                    <img src="~/images/cesa.jfif" alt="Team Member">
                    <h5>Jasper Cesa</h5>
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="team-member">
                    <img src="~/images/lingo.jpg" alt="Team Member">
                    <h5>Angelito Lingo</h5>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}