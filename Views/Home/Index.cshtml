@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<main>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Welcome to VerseCraft</h1>
            <p>
                A creative home for poets, readers, and dreamers. Share your work, explore others’ creativity, and build your literary world with us.
            </p>
            <a class="btn btn-primary btn-lg" asp-controller="Auth" asp-action="Register">
                <i class="bi bi-person-plus me-1"></i> Get Started
            </a>
        </div>
        <div class="hero-image">
            <img src="~/images/writing-poem.jfif" alt="Writing Poetry" />
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-search"></i></div>
                <h4>Explore Community Poems</h4>
                <p>
                    Browse poems from users worldwide. Use filters and tags to discover themes you connect with, or just enjoy browsing organically.
                </p>
                <a class="btn btn-outline-primary mt-2" asp-controller="ExplorePoem" asp-action="DisplayPoems">Start Exploring</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-pencil-square"></i></div>
                <h4>Submit Your Poetry</h4>
                <p>
                    Have a poem that deserves to be read? Share it on VerseCraft! Our simple submission form lets you upload your work in seconds.
                </p>
                <a class="btn btn-primary mt-2" asp-controller="MyCollection" asp-action="DisplayCollections">Share a Poem</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-bookmark-heart"></i></div>
                <h4>Create Your Anthology</h4>
                <p>
                    Build a personalized collection of your favorite poems. Save works you love, revisit them later, or explore public anthologies shared by others.
                </p>
                <a class="btn btn-outline-dark mt-2" asp-controller="MyCollection" asp-action="DisplayCollections">Build Your Collection</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon"><i class="bi bi-people"></i></div>
                <h4>Connect & Collaborate</h4>
                <p>
                    Follow poets, comment on works, and join a supportive community. Collaboration and feedback help everyone grow.
                </p>
                <a class="btn btn-outline-primary mt-2" asp-controller="Home" asp-action="AboutUs">Meet the Community</a>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section">
        <div class="row justify-content-center">
            <div class="col-md-4 testimonial">
                <div class="testimonial-quote">
                    <i class="bi bi-quote"></i>
                    "VerseCraft helped me find my voice and connect with poets around the world."
                </div>
                <div class="testimonial-user">— Maya, Poet</div>
            </div>
            <div class="col-md-4 testimonial">
                <div class="testimonial-quote">
                    <i class="bi bi-quote"></i>
                    "The anthology feature is amazing! I love curating my favorite poems."
                </div>
                <div class="testimonial-user">— Alex, Reader</div>
            </div>
            <div class="col-md-4 testimonial">
                <div class="testimonial-quote">
                    <i class="bi bi-quote"></i>
                    "A beautiful, welcoming space for both new and experienced writers."
                </div>
                <div class="testimonial-user">— Priya, Writer</div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <h2>Ready to start your poetic journey?</h2>
        <p>
            Join VerseCraft today and become part of a vibrant, creative community. Whether you write, read, or just want to be inspired, there’s a place for you here.
        </p>
        <a class="btn btn-lg btn-primary" asp-controller="Auth" asp-action="Register">
            <i class="bi bi-person-plus"></i> Join Now
        </a>
    </section>
</main>