@model List<VerseCraft.Areas.admin.ViewModels.PoemFormViewModel>
@{
    ViewData["Title"] = "Manage Poems";
}

<link rel="stylesheet" href="~/css/displayUser.css" asp-append-version="true" />

<div class="card border-0 shadow-lg admin-body p-0">
    <!-- Header -->
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center bg-transparent border-bottom-0 px-4 pt-4 pb-2">
        <h5 class="mb-2 mb-sm-0 fw-bold" style="color:#00d4ff;">
            <i class="bi bi-journal-text me-2"></i> Manage Poems
        </h5>
        <div class="d-flex flex-nowrap align-items-center gap-2 header-actions-scroll">
            <div class="input-group" style="max-width: 220px;">
                <span class="input-group-text bg-dark border-0 text-white">
                    <i class="bi bi-search"></i>
                </span>
                <input id="poemSearch"
                       class="form-control form-control-sm bg-dark text-white border-0 shadow-none"
                       style="border-radius: 0 8px 8px 0;"
                       placeholder="Search poems..." />
            </div>
            <a asp-action="AddPoem" class="btn btn-outline-light btn-sm flex-shrink-0">
                <i class="bi bi-plus-circle me-1"></i> Add Poem
            </a>
        </div>
    </div>

    <!-- Table -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover table-sm align-middle mb-0" id="poemTable" style="border-radius: 0 0 18px 18px; overflow: hidden; min-width: 700px;">
                <thead style="background: rgba(0,212,255,0.12); color: #00d4ff;">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th class="d-none d-md-table-cell">Genre</th>
                        <th>Public</th>
                        <th>Approved</th>
                        <th class="d-none d-lg-table-cell">Featured</th>
                        <th class="d-none d-lg-table-cell">Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var poem in Model)
                        {
                            <tr>
                                <td>@poem.Id</td>
                                <td class="text-start">@poem.Title</td>
                                <td class="d-none d-md-table-cell">@(!string.IsNullOrWhiteSpace(poem.Genre) ? poem.Genre : "Unclassified")</td>
                                <td>
                                    <span class="badge rounded-pill bg-@(poem.IsPublic ? "success" : "secondary") px-3 py-2">
                                        @(poem.IsPublic ? "Yes" : "No")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-@(poem.IsApproved ? "success" : "danger") px-3 py-2">
                                        @(poem.IsApproved ? "Yes" : "No")
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge rounded-pill bg-@(poem.IsFeatured ? "info" : "light text-dark") px-3 py-2">
                                        @(poem.IsFeatured ? "Yes" : "No")
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">@poem.Author</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditPoem" asp-route-id="@poem.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="DeletePoem" asp-route-id="@poem.Id" method="post" class="delete-form d-inline">
                                            <button type="button" class="btn btn-outline-danger btn-sm btn-delete" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No poems found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // for search
        document.getElementById("poemSearch").addEventListener("input", function () {
            const val = this.value.toLowerCase();
            document.querySelectorAll("#poemTable tbody tr").forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(val) ? "" : "none";
            });
        });

        // for delete
        document.querySelectorAll(".btn-delete").forEach(button => {
            button.addEventListener("click", function () {
                const form = this.closest("form");

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This poem will be permanently deleted!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}