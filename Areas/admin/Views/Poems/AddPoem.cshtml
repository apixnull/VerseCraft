@model VerseCraft.Areas.admin.ViewModels.PoemFormViewModel

@{
    ViewData["Title"] = "Add Poem";
}

<div class="card border-0 shadow-lg admin-body p-0" style="max-width: 900px; margin: auto;">
    <div class="card-header bg-transparent border-bottom-0 d-flex justify-content-between align-items-center flex-wrap px-4 pt-4 pb-2">
        <h4 class="mb-2 mb-sm-0 fw-bold" style="color:#00d4ff;">
            <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
        </h4>
        <a asp-area="admin" asp-controller="Poems" asp-action="DisplayPoem" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Poem List
        </a>
    </div>

    <div class="card-body px-4 py-4 text-white">
        <form asp-action="AddPoem" enctype="multipart/form-data" method="post" novalidate>
            <div class="row g-4">
                <!-- Title -->
                <div class="col-12">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control bg-dark text-white border-secondary" placeholder="Enter poem title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <!-- Content -->
                <div class="col-12">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" rows="5" class="form-control bg-dark text-white border-secondary" placeholder="Write the poem content"></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <!-- Summary -->
                <div class="col-12">
                    <label asp-for="Summary" class="form-label">Summary</label>
                    <textarea asp-for="Summary" rows="3" class="form-control bg-dark text-white border-secondary" placeholder="Short summary"></textarea>
                    <span asp-validation-for="Summary" class="text-danger small"></span>
                </div>

                <!-- Genre & Style -->
                <div class="col-md-6">
                    <label asp-for="Genre" class="form-label">Genre</label>
                    <select asp-for="Genre" class="form-select bg-dark text-white border-secondary">
                        <option value="">-- Select Genre --</option>
                        <option>Poetry</option>
                        <option>Sonnet</option>
                        <option>Haiku</option>
                        <option>Limerick</option>
                        <option>Free Verse</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Style" class="form-label">Style</label>
                    <select asp-for="Style" class="form-select bg-dark text-white border-secondary">
                        <option value="">-- Select Style --</option>
                        <option>Traditional</option>
                        <option>Modern</option>
                        <option>Experimental</option>
                    </select>
                    <span asp-validation-for="Style" class="text-danger small"></span>
                </div>

                <!-- Language & Mood -->
                <div class="col-md-6">
                    <label asp-for="Language" class="form-label">Language</label>
                    <input asp-for="Language" class="form-control bg-dark text-white border-secondary" placeholder="Language" />
                    <span asp-validation-for="Language" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Mood" class="form-label">Mood</label>
                    <select asp-for="Mood" class="form-select bg-dark text-white border-secondary">
                        <option value="">-- Select Mood --</option>
                        <option>Happy</option>
                        <option>Sad</option>
                        <option>Angry</option>
                        <option>Hopeful</option>
                        <option>Reflective</option>
                    </select>
                    <span asp-validation-for="Mood" class="text-danger small"></span>
                </div>

                <!-- Cover Image -->
                <div class="col-12">
                    <label asp-for="CoverImageFile" class="form-label">Cover Image</label>
                    <input type="file" asp-for="CoverImageFile" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="CoverImageFile" class="text-danger small"></span>
                </div>

                <!-- Author & User -->
                <div class="col-md-6">
                    <label asp-for="Author" class="form-label">Author</label>
                    <input asp-for="Author" class="form-control bg-dark text-white border-secondary" placeholder="Author name" />
                    <span asp-validation-for="Author" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="UserId" class="form-label">User ID</label>
                    <input asp-for="UserId" class="form-control bg-dark text-white border-secondary" placeholder="Linked user (optional)" />
                    <span asp-validation-for="UserId" class="text-danger small"></span>
                </div>

                <!-- Anthology -->
                <div class="col-12">
                    <label asp-for="AnthologyId" class="form-label">Anthology ID</label>
                    <input asp-for="AnthologyId" class="form-control bg-dark text-white border-secondary" placeholder="Anthology ID (optional)" />
                    <span asp-validation-for="AnthologyId" class="text-danger small"></span>
                </div>

                <!-- Checkboxes -->
                <div class="col-md-4 form-check">
                    <input asp-for="IsPublic" class="form-check-input" />
                    <label asp-for="IsPublic" class="form-check-label">Is Public</label>
                </div>
                <div class="col-md-4 form-check">
                    <input asp-for="IsApproved" class="form-check-input" />
                    <label asp-for="IsApproved" class="form-check-label">Is Approved</label>
                </div>
                <div class="col-md-4 form-check">
                    <input asp-for="IsFeatured" class="form-check-input" />
                    <label asp-for="IsFeatured" class="form-check-label">Is Featured</label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-outline-light px-5 py-3" style="border-color:#00d4ff; color:#00d4ff;">
                    <i class="bi bi-pencil"></i> Submit Poem
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}