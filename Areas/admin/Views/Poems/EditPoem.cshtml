</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Update visibility toggle text
        document.getElementById('IsPublicCheckbox').addEventListener('change', function() {
            var toggleStatus = document.querySelector('.toggle-status');
            var statusText = document.querySelector('.text-muted');

            if (this.checked) {
                toggleStatus.textContent = 'Public   -> ';
                statusText.textContent = 'This poem is visible to everyone';
            } else {
                toggleStatus.textContent = 'Private   -> ';
                statusText.textContent = 'Only you can see this poem';
            }
        });

        // Display selected filename
        document.getElementById('coverImageUpload').addEventListener('change', function() {
            var fileName = this.files[0] ? this.files[0].name : 'No file selected';
            document.getElementById('file-name').textContent = fileName;
        });
    </script>
}