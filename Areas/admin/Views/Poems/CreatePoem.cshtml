@model VerseCraft.Areas.admin.ViewModels.PoemFormViewModel

@{
    ViewData["Title"] = "Create Poem";
}

<h2 class="mb-4">Create Poem</h2>

<form asp-action="CreatePoem" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8">
            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Content -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Summary -->
            <div class="mb-3">
                <label asp-for="Summary" class="form-label">Summary</label>
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Genre -->
                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label">Genre</label>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- Style -->
                    <div class="mb-3">
                        <label asp-for="Style" class="form-label">Style</label>
                        <input asp-for="Style" class="form-control" />
                        <span asp-validation-for="Style" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Theme -->
                    <div class="mb-3">
                        <label asp-for="Theme" class="form-label">Theme</label>
                        <input asp-for="Theme" class="form-control" />
                        <span asp-validation-for="Theme" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- Tags -->
                    <div class="mb-3">
                        <label asp-for="Tags" class="form-label">Tags</label>
                        <input asp-for="Tags" class="form-control" placeholder="comma-separated" />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <!-- Language -->
                    <div class="mb-3">
                        <label asp-for="Language" class="form-label">Language</label>
                        <input asp-for="Language" class="form-control" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Mood -->
                    <div class="mb-3">
                        <label asp-for="Mood" class="form-label">Mood</label>
                        <input asp-for="Mood" class="form-control" />
                        <span asp-validation-for="Mood" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Author Name -->
                    <div class="mb-3">
                        <label asp-for="AuthorName" class="form-label">Author Name</label>
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- License & Copyright -->
            <div class="mb-3">
                <label asp-for="LicenseType" class="form-label">License Type</label>
                <input asp-for="LicenseType" class="form-control" placeholder="e.g., Creative Commons" />
                <span asp-validation-for="LicenseType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CopyrightNotice" class="form-label">Copyright Notice</label>
                <textarea asp-for="CopyrightNotice" class="form-control" rows="2" placeholder="© 2025 Jane Doe"></textarea>
                <span asp-validation-for="CopyrightNotice" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <!-- New Cover Image Upload -->
            <div class="mb-3">
                <label asp-for="NewCoverImagePath" class="form-label">Cover Image</label>
                <input asp-for="NewCoverImagePath" class="form-control" type="file" />
                <span asp-validation-for="NewCoverImagePath" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Save Poem
        </button>
        <a asp-action="DisplayPoems" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
