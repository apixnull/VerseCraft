@model VerseCraft.Areas.admin.ViewModels.AnthologyFormViewModel

@{
    ViewData["Title"] = "Create Anthology";
}

<h2 class="text-center mb-4">Create New Anthology</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="CreateAnthology" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label fw-bold">Anthology Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter anthology title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Write a brief description of the anthology"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AuthorName" class="control-label fw-bold">Author Name</label>
                        <input asp-for="AuthorName" class="form-control" placeholder="Enter author's name" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LicenseType" class="control-label fw-bold">License Type</label>
                        <input asp-for="LicenseType" class="form-control" placeholder="Enter license type (optional)" />
                        <span asp-validation-for="LicenseType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CopyrightNotice" class="control-label fw-bold">Copyright Notice</label>
                        <input asp-for="CopyrightNotice" class="form-control" placeholder="Enter copyright notice (optional)" />
                        <span asp-validation-for="CopyrightNotice" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CoverImage" class="control-label fw-bold">Cover Image</label>
                        <input asp-for="CoverImage" type="file" class="form-control" />
                        <span asp-validation-for="CoverImage" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsPublic" class="form-check-input" type="checkbox" id="IsPublicCheckbox" />
                        <label asp-for="IsPublic" class="form-check-label fw-bold">Make this anthology public</label>
                    </div>


                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Create Anthology</button>
                        <a href="@Url.Action("DisplayAnthologies", "Anthology")" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
