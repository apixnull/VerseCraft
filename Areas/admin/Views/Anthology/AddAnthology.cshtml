@model VerseCraft.Areas.Admin.ViewModels.AnthologyViewModel
@{
    ViewData["Title"] = "Add Anthology";
}
<link rel="stylesheet" href="~/css/addAnthology.css" asp-append-version="true" />

<div class="container">
    <!-- Back button -->
    <div class="header">
        <a href="@Url.Action("DisplayAnthology")" class="back-btn">
            <i class='bx bx-arrow-back'></i> Back to Anthology
        </a>
    </div>

    <!-- Form title -->
    <h2 class="form-title"><i class='bx bx-book-add'></i> Add New Anthology</h2>

    <form asp-action="AddAnthology" method="post" enctype="multipart/form-data" class="anthology-form">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CopyrightNotice"></label>
            <input asp-for="CopyrightNotice" class="form-control" />
            <span asp-validation-for="CopyrightNotice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LicenseType"></label>
            <input asp-for="LicenseType" class="form-control" />
            <span asp-validation-for="LicenseType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TermsAndConditions"></label>
            <textarea asp-for="TermsAndConditions" class="form-control" rows="3"></textarea>
            <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile"></label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">
            <i class='bx bx-save'></i> Submit
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
